{
  "manifest_version": 3,
  "name": "Chess Spy & Analyze",
  "version": "2.0",
  "description": "Scans board and adds a Stockfish evaluation bar.",
  "permissions": ["activeTab", "scripting", "storage"],
  "web_accessible_resources": [
    {
      "resources": ["stockfish.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}